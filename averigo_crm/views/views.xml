<odoo>
    <data>

        <record id="sale_crm_view_inherit" model="ir.ui.view">
            <field name="name">sale.crm.view.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <button name="action_sale_quotations_new" position="replace">
                    <button string="Add To Quotation" name="action_sale_quotations_new" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('type', '=', 'lead'), '&amp;', ('probability', '=', 0), ('active', '=', False)]}"/>
                </button>
            </field>
        </record>

        <record id="averigo_crm_activity_view_tree" model="ir.ui.view">
            <field name="name">Activities and Events Tree</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
            <field name="arch" type="xml">
                <field name="partner_ids" position="replace">
                    <field name="employees" widget="many2many_tags"
                           options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                    <field name="customers" widget="many2many_tags"
                           options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                    <field name="customer_contacts" widget="many2many_tags"
                           options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                </field>
            </field>
        </record>

        <record id="averigo_quick_create_opportunity_form" model="ir.ui.view">
            <field name="name">crm.lead.quick.form.averigo</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="context">{'default_is_customer': True}</attribute>
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>

       <record id="crm_lead_view_form" model="ir.ui.view">
            <field name="name">Averigo CRM Form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="status" widget="statusbar" clickable="1"
                           attrs="{'invisible':[('stage_id','!=',False)]}"/>
                    <button name="create_account" string="Create Account" type="object" class="btn btn-primary" attrs="{'invisible':['|',('partner_id','!=',False),('type','=','lead')]}"/>
                </xpath>
                <xpath expr="//group/group[2]/field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'required':0}</attribute>
                    <attribute name="context">{'default_is_customer':True}</attribute>
                </xpath>
                <xpath expr="//div[hasclass('col')]" position="replace">
                    <div class="col">
                        <label for="planned_revenue" class="oe_edit_only"/>
                        <div class="o_row">
                            <field name="company_currency" invisible="1"/>
                            <field name="planned_revenue" class="oe_inline" widget="monetary"
                                   options="{'currency_field': 'company_currency'}"/>
                            <span class="oe_grey p-2">at</span>
                        </div>
                    </div>
                </xpath>
                <group attrs="{'invisible': [('type', '=', 'opportunity')]}">

                </group>
                <field name="title" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="partner_name" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="zip" position="replace">
                    <field name="zip" attrs="{'required': [('type', '=', 'lead')]}" class="oe_read_only"/>
                </field>
                <field name="street" position="before">
                    <field name="zip" attrs="{'required': [('type', '=', 'lead')]}" class="oe_edit_only"/>
                </field>
                <xpath expr="//form/sheet/group/group/field[@name='partner_name']" position="replace">
                    <!--                    <attribute name="attrs">{'required':[('type','!=', 'opportunity')]}</attribute>-->
                    <field name="partner_name" attrs="{'required':[('type','=','lead')]}"/>
                </xpath>
                <!--                <field name="partner_name" position="attributes">-->
                <!--                    <attribute name="required">[('type','=','lead')]</attribute>-->
                <!--                </field>-->
                <field name="street" position="replace">
                    <field name="street" placeholder="Street..." class="o_address_street"
                           attrs="{'required': [('type', '=', 'lead')]}"/>
                </field>
                <field name="contact_name" position="replace">
                    <!--                    <label for="" name="address_name" string="Name"/>-->
                    <div class="o_address_format" name="div_address" style="margin-bottom: 15px;">
                        <field name="title" style="padding: 0 !important;width: 5rem;margin-right: 4px !important;"
                               attrs="{'required':[('type','=','lead')]}"/>
                        <field name="first_name" placeholder="First Name"
                               class="o_address_city" style="width: 25.2% !important;"
                               attrs="{'required':[('type','=','lead')]}"/>
                        <field name="middle_name" class="o_address_city col-3" placeholder="Middle Name"/>
                        <field name="last_name" placeholder="Last Name" class="o_address_city"
                               style="width: 25.1% !important;" attrs="{'required':[('type','=','lead')]}"/>
                    </div>
                </field>
            </field>
        </record>

        <record id="action_view_lead_stages" model="ir.actions.act_window">
            <field name="name">Lead Stages</field>
            <field name="res_model">crm.lead.status</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Lead Status" id="crm_menu_lead_status" parent="crm.crm_menu_config"
                  action="action_view_lead_stages" groups="base_averigo.hide_critical_menu"/>

        <record id="action_view_contacts" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('type', '=', 'contact')]</field>
        </record>

        <menuitem name="Contacts" id="crm_menu_contacts" action="action_view_contacts"/>

        <record id="view_opportunities" model="ir.actions.act_window">
            <field name="name">Opportunities</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_type': 'opportunity'}</field>
            <field name="domain">[('type', '=', 'opportunity')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Nothing here
                </p>
                <p>
                    Create a new opportunity
                </p>
            </field>
        </record>

        <menuitem id="crm_opportunities"
                  name="Opportunities"
                  parent="crm.crm_menu_root"
                  action="view_opportunities"
                  sequence="6"/>

        <menuitem id="crm.crm_team_config"
                  name="Sales Team"
                  parent="crm.crm_menu_config"
                  action="sales_team.sales_team_config_action"
                  sequence="5"/>

        <record id="averigo_view_conatct_titles" model="ir.actions.act_window">
            <field name="name">Contact Title</field>
            <field name="res_model">res.partner.title</field>
            <field name="view_mode">tree,form</field>
            <!--            <field name="context">{'default_type':'opportunity'}</field>-->
            <!--            <field name="domain">[('type','=','opportunity')]</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Nothing here
                </p>
                <p>
                    Create a new Contact Title
                </p>
            </field>
        </record>

        <record id="view_users_notify_search" model="ir.ui.view">
            <field name="name">res.partner.title.search</field>
            <field name="model">res.partner.title</field>
            <field name="arch" type="xml">
                <search string="Contact Title">
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="active" string="Archived" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <menuitem id="averigo_contact_titles"
                  name="Title"
                  parent="crm.crm_menu_config"
                  action="averigo_view_conatct_titles"
                  groups="base_averigo.hide_critical_menu"
                  sequence="5"/>

        <record id="sales_team.sales_team_config_action" model="ir.actions.act_window">
            <field name="name">Sales Team</field>
            <field name="res_model">crm.team</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="sales_team.crm_team_salesteams_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new sales team
                </p>
                <p>
                    Use Sales Teams to organize your sales departments.
                    Each team will work with a separate pipeline.
                </p>
            </field>
        </record>

        <record id="view_calendar_event_calendar_inherit" model="ir.ui.view">
            <field name="name">calendar.event.calendar.inherit</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="arch" type="xml">
                <xpath expr="//calendar" position="replace">
                    <calendar js_class="attendee_calendar" string="Meetings" date_start="start" date_stop="stop"
                              date_delay="duration" all_day="allday"
                              event_open_popup="true"
                              event_limit="5"
                              color="partner_id">
                        <field name="attendee_status"/>
                        <field name="partner_id"/>
                        <field name="partner_ids"/>
                        <field name="is_highlighted" invisible="1"/>
                        <field name="description"/>
                    </calendar>
                </xpath>
            </field>
        </record>

        <record id="view_calendar_event_form" model="ir.ui.view">
            <field name="name">calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <field name="allday" position="after">
                    <field name="activity_type" widget="many2many_tags"/>
                </field>
                <label for="partner_ids" position="attributes">
                    <attribute name="invisible">1</attribute>
                </label>
                <field name="partner_ids" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//form/sheet/div[1]" position="after">
                    <style>
                        .o_field_many2manytags{height: 10vh;;max-height: 10vh; overflow: scroll;}
                        .badge{padding:5px !important;}
                    </style>
                    <div class="row col-12">
                        <div class="col column col-lg-4 col-md-4">
                            <label for="employees" string="Employees"/>
                            <h2>
                                <field name="employees" widget="many2many_tags"/>
                            </h2>
                        </div>
                        <div class="col column col-lg-4 col-md-4">
                            <label for="customers" string="Customers"/>
                            <h2>
                                <field name="customers" widget="many2many_tags"/>
                            </h2>
                        </div>
                        <div class="col column col-lg-4 col-md-4">
                            <field name="show_customer_contact" invisible="1"/>
                            <label for="customer_contacts" string="Customer Contacts"
                                   attrs="{'invisible':[('show_customer_contact','=',False)]}"/>
                            <h2>
                                <field name="customer_contacts" widget="many2many_tags"
                                       attrs="{'invisible':[('show_customer_contact','=',False)]}"/>
                            </h2>
                        </div>
                    </div>
                    <div class="col">
                        <label for="user_id" class="oe_edit_only"/>
                        <div>
                            <field name="user_id" string="Owner"
                                   options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="event.menu_event_global_settings" model="ir.ui.menu">
            <field name="groups_id" eval="[(5, 0, 0), (4, ref('base_averigo.hide_critical_menu'))]"/>
        </record>

        <record id="crm.crm_config_settings_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(5, 0, 0), (4, ref('base_averigo.hide_critical_menu'))]"/>
        </record>

        <record id="hr_recruitment.menu_hr_recruitment_global_settings" model="ir.ui.menu">
            <field name="groups_id" eval="[(5, 0, 0), (4, ref('base_averigo.hide_critical_menu'))]"/>
        </record>

        <record model="ir.ui.view" id="view_crm_tree_inherit">
            <field name="name">crm.tree.inherit</field>
            <field name="model">crm.lead</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='user_id']" position="replace">
                    <field name="user_id" string="Opportunity Owner" invisible="context.get('default_type') == 'lead'"/>
                    <field name="user_id" string="Lead Owner" invisible="context.get('default_type') == 'opportunity'"/>
                </xpath>
                <field name="tag_ids" position="replace">
                    <field name="tag_ids" optional="show" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </field>
            </field>
        </record>
        <record id="crm_case_tree_view_leads" model="ir.ui.view">
            <field name="name">averigo.crm.lead.tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <field name="country_id" position="replace">

                </field>
                <field name="name" position="attributes">
                    <attribute name="string">Lead Name</attribute>
                </field>
                <field name="email_from" position="before">
                    <field name="partner_name"/>
                </field>
                <field name="city" position="before">
                    <field name="street"/>
                </field>
                <field name="city" position="after">
                    <field name="state_id"/>
                </field>
            </field>
        </record>
        <menuitem id="crm.crm_menu_leads"
                  name="Leads"
                  parent="crm.crm_menu_root"
                  groups="base_averigo.hide_critical_menu"
                  sequence="5"/>
    </data>
</odoo>
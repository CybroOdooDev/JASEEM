<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <template id="message_survey_assigned">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <span t-field="activity.create_uid.name"/>
                assigned you an activity
                <span t-field="activity.activity_type_id.name"/>
                <t t-if="activity.summary">(<span t-field="activity.summary"/>)
                </t>
                on
                <span t-field="activity.res_name"/>
                to close for
                <t t-esc="activity.date_deadline.strftime('%m/%d/%Y')"/>.
                <br/>
                <div>
                    <p style="margin: 16px 0px 16px 0px;">
                        <a t-att-href="'%s/mail/view?model=%s&amp;res_id=%s' % (activity.user_id.company_id.exact_domain,activity.res_model, activity.res_id)"
                           style="background-color: #689f38;padding: 8px 16px 8px 16px;text-decoration: none;color: #fff;border-radius: 5px;font-size: 13px;">
                            View
                            <t t-esc="model_description or 'document'"/>
                        </a>
                    </p>
                    <a t-att-href="activity.base_url"
                       style="background-color: #689f38;padding: 8px 16px 8px 16px;text-decoration: none;color: #fff;border-radius: 5px;font-size: 13px;">
                        Go to Survey
                    </a>
                </div>
            </div>
        </template>

        <record id="message_state_assigned" model="mail.template">
            <field name="name">Opportunity: State Change</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="subject">Opportunity: {{ object.name }}, status changed
                by {{ object.user_id.name }}
            </field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0"
                       style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0"
                                   width="590"
                                   style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <tr>
                                        <td align="center"
                                            style="min-width: 590px;">
                                            <table border="0" cellpadding="0"
                                                   cellspacing="0" width="590"
                                                   style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle">
                                                        <span style="font-size: 10px;">
                                                            Your
                                                            Opportunity
                                                        </span>
                                                        <br/>
                                                        <span style="font-size: 20px; font-weight: bold;"
                                                              t-out="object.name">
                                                        </span>
                                                    </td>
                                                    <td valign="middle"
                                                        align="right">
                                                        <img t-attf-src="/logo.png?company={{ object.company_id.id }}"
                                                             style="padding: 0px; margin: 0px; height: auto; width: 80px;"
                                                             t-att-alt="object.company_id.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2"
                                                        style="text-align:center;">
                                                        <hr width="100%"
                                                            style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- CONTENT -->
                                    <tr>
                                        <td align="center"
                                            style="min-width: 590px;">
                                            <table border="0" cellpadding="0"
                                                   cellspacing="0" width="590"
                                                   style="min-width: 590px; background-color: white;
                                                   padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="top"
                                                        style="font-size: 13px;">
                                                        <div>
                                                            Opportunity
                                                            <b>
                                                                <t t-out="object.name"/>
                                                            </b>
                                                            <t t-if="object.partner_id">
                                                                with Customer
                                                                <b>
                                                                    <t t-out="object.partner_id.name"/>
                                                                </b>
                                                            </t>
                                                            , Status has been
                                                            changed to
                                                            <b>
                                                                <t t-out="object.stage_id.name"/>
                                                            </b>
                                                            by User
                                                            <t t-out="object.user_id.name"/>
                                                            <br/>
                                                            <br/>
                                                            <p style="margin: 16px 0px 16px 0px;">
                                                                <a t-attf-href="{{ object.opportunity_url }}"
                                                                   style="background-color: #689f38;padding: 8px 16px 8px 16px;text-decoration: none;color: #fff;border-radius: 5px;font-size: 13px;">
                                                                    View
                                                                    Opportunity
                                                                </a>
                                                            </p>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="text-align:center;">
                                                        <hr width="100%"
                                                            style="background-color:rgb(204,204,204);
                                                            border:medium none;clear:both;display:block;f
                                                            ont-size:0px;min-height:1px;line-height:0;
                                                            margin: 16px 0px 16px 0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- FOOTER -->
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <!--                    POWERED BY-->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0"
                                   width="590"
                                   style="min-width: 590px; background-color: #F1F1F1; color: #454748;
                                   padding: 8px; border-collapse:separate;">
                                <tr>
                                    <td style="text-align: center; font-size: 13px;">
                                        Powered by
                                        <a target="_blank"
                                           t-attf-href="https://www.averigo.com/"
                                           style="color: #689f38;">AveriGo LLC
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
        </record>

